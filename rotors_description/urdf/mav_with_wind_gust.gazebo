<robot name="$(arg mav_name)" xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- Instantiate the mav with a generic pose sensor. -->
  <xacro:include filename="$(find rotors_description)/urdf/mav_generic_odometry_sensor.gazebo" />

  <!-- Add a wind gust starting at 40s and lasting for 2s. -->
  <xacro:wind_plugin_macro
    namespace="${namespace}"
    xyz_offset="0 0 0"
    wind_force_pub_topic = "myWindForce"
    wind_speed_pub_topic = "myWindSpeed"
    wind_direction="0 1 0"
    wind_force_mean="0.1"
    wind_gust_direction="1 1 0"
    wind_gust_duration="10"
    wind_gust_start="10"
    wind_gust_force_mean="20"
    drag_coefficient="0.08 0 0 0 0.08 0 0 0 0.01"
    wind_update_interval="1.0"
    use_custom_static_wind_field="true"
    custom_wind_field_path="$(find rotors_gazebo)/hemicyl/">
  </xacro:wind_plugin_macro>
</robot>
